# Environment Variables for Coolify Deployment
# Copy this file to .env and fill with your production values

# Domain Configuration
DOMAIN=soe.texts.com.br

# Database Configuration
DB_NAME=bibliasoe
DB_USER=soe
DB_PASSWORD=your_secure_database_password_here

# Frontend Configuration - API will be available at /api path
NUXT_PUBLIC_API_BASE=https://soe.texts.com.br/api
# For internal communication (container to container)
NUXT_PUBLIC_API_BASE_INTERNAL=http://backend:8001/api/v1

# Optional: Override default PostgreSQL settings
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}